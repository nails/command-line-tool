{
    "name": "nails/command-line-tool",
    "version": "1.1.0",
    "keywords": [
        "Nails",
        "Shed Collective",
        "CodeIgniter"
    ],
    "homepage": "http://nailsapp.co.uk",
    "description": "The command line tool for Nails makes creating new projects easy, and provides a simple interface to the installed console module.",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo de la Pe√±a",
            "email": "p@nailsapp.co.uk"
        }
    ],
    "support": {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "bamarni/composer-bin-plugin": "1.2.0",
        "symfony/console": "4.2.2",
        "symfony/finder": "4.2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "7.5.1"
    },
    "autoload": {
        "psr-4": {
            "Nails\\Cli\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": ["@composer bin all install --ansi"],
        "post-update-cmd": ["@composer bin all update --ansi"],
        "build" : ["./scripts/build.sh"],
        "test" : ["./scripts/test.sh"]
    },
    "bin": [
        "dist/nails",
        "dist/nails-cli"
    ]
}
