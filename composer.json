{
    "name": "nails/command-line-tool",
    "version": "1.3.0",
    "keywords": [
        "Nails",
        "Shed Collective",
        "CodeIgniter"
    ],
    "homepage": "http://nailsapp.co.uk",
    "description": "The command line tool for Nails makes creating new projects easy, and provides a simple interface to the installed console module.",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo de la PeÃ±a",
            "email": "p@nailsapp.co.uk"
        }
    ],
    "support": {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-zip": "*",
        "ext-curl": "*",
        "bamarni/composer-bin-plugin": "^1.4",
        "symfony/console": "^5.2",
        "symfony/finder": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "phpstan/phpstan": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Nails\\Cli\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": ["@composer bin all install --ansi"],
        "post-update-cmd": ["@composer bin all update --ansi"],
        "build" : ["./scripts/build.sh"],
        "test" : ["./scripts/test.sh"],
        "analyse": "./vendor/bin/phpstan analyse -c .phpstan/config.neon"
    },
    "bin": [
        "dist/nails",
        "dist/nails-cli"
    ]
}
